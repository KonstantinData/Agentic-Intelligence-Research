# Agentic Intelligence Research System - Environment Configuration

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
# Options: development, staging, production

# =============================================================================
# EMAIL/SMTP CONFIGURATION
# =============================================================================

# Gmail Configuration (recommended for development/staging)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password
# Note: Use App Passwords, not regular Gmail password
# Generate at: https://myaccount.google.com/apppasswords

# Outlook/Office365 Configuration
OUTLOOK_EMAIL=your-email@outlook.com
OUTLOOK_PASSWORD=your-password

# Custom SMTP Configuration (recommended for production)
SMTP_SERVER=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourcompany.com
SMTP_PASSWORD=secure-smtp-password
SENDER_NAME=Your Company Notification System
SENDER_EMAIL=noreply@yourcompany.com

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================

# S3 Bucket Names
S3_BUCKET_NAME=agentic-intelligence-prod
S3_EVENTLOG_BUCKET=agentic-intelligence-events
S3_WORKFLOW_BUCKET=agentic-intelligence-workflows

# AWS Credentials (not needed if using IAM roles on EC2/Lambda)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging Level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Auto-save for workflow logs
WORKFLOW_AUTO_SAVE=true

# Email retry settings
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=60

# Event cleanup settings
EVENT_CLEANUP_DAYS=30

# =============================================================================
# GOOGLE CALENDAR INTEGRATION (Future use)
# =============================================================================

# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS_PATH=path/to/credentials.json
GOOGLE_CALENDAR_TOKEN_PATH=path/to/token.json
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar.readonly

# Calendar polling interval (minutes)
CALENDAR_POLL_INTERVAL=5

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Default reminder schedule (minutes before event)
REMINDER_SCHEDULE=2880,1440,60
# 2880 = 2 days, 1440 = 1 day, 60 = 1 hour

# Escalation settings
ESCALATION_ENABLED=true
ESCALATION_DELAY_HOURS=24
MAX_ESCALATION_LEVELS=3

# Business hours (for smart scheduling)
BUSINESS_START_HOUR=9
BUSINESS_END_HOUR=17
BUSINESS_TIMEZONE=US/Eastern

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Email validation
STRICT_EMAIL_VALIDATION=true

# SSL/TLS settings
SSL_VERIFY=true
TLS_REQUIRED=true

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Debug mode
DEBUG=false

# Dry run mode (for testing without sending emails)
DRY_RUN=false

# Mock external services
MOCK_S3=false
MOCK_SMTP=false
MOCK_CALENDAR_API=false

# Test data
TEST_RECIPIENT_EMAIL=test@example.com
TEST_SENDER_EMAIL=sender@example.com